{
  "extends": "next/core-web-vitals",
  "rules": {
    "react/display-name": "off",
    "boundaries/entry-point": [
      2,
      {
        "default": "disallow",
        "rules": [
          {
            "target": [
              [
                "shared",
                {
                  "segment": "lib"
                }
              ]
            ],
            "allow": "*/index.ts"
          },
          {
            "target": [
              [
                "shared",
                {
                  "segment": "lib"
                }
              ]
            ],
            "allow": "*.(ts|tsx)"
          },
          {
            "target": [
              [
                "shared",
                {
                  "segment": "constants"
                }
              ]
            ],
            "allow": "index.ts"
          },
          {
            "target": [
              [
                "shared",
                {
                  "segment": "hooks"
                }
              ]
            ],
            "allow": "index.ts"
          },
          {
            "target": [
              [
                "shared",
                {
                  "segment": "context"
                }
              ]
            ],
            "allow": "index.ts"
          },
          {
            "target": [
              [
                "shared",
                {
                  "segment": "(config|store)"
                }
              ]
            ],
            "allow": "**"
          },
          {
            "target": [
              [
                "shared",
                {
                  "segment": "(ui|api)" // ("ui"|"constants")
                }
              ]
            ],
            "allow": "**"
          },
          {
            "target": ["app", "pages", "widgets", "features", "entities"],
            "allow": "index.(ts|tsx)"
          }
        ]
      }
    ],
    "boundaries/element-types": [
      2,
      {
        "default": "allow",
        "message": "${file.type} не имеет права импортировать (${dependency.type})",
        "rules": [
          {
            "from": ["shared"],
            "disallow": ["app", "pages", "widgets", "features", "entities"],
            "message":
            "Общий модуль не должен импортировать верхние слои (${dependency.type})"
          },
          {
            "from": ["entities"],
            "message": "Сущность не должна импортировать верхние слои (${dependency.type})",
            "disallow": ["app", "pages", "widgets", "features"]
          },
          {
            "from": ["entities"],
            "message": "Сущность не должна импортировать другую сущность",
            "disallow": [
              [
                "entities",
                {
                  "entity": "!${entity}"
                }
              ]
            ]
          },
          {
            "from": ["features"],
            "message":
            "Функция не должна импортировать верхние слои (${dependency.type})",
            "disallow": ["app", "pages", "widgets"]
          },
          {
            "from": ["features"],
            "message": "Функция не должна импортировать другую функцию",
            "disallow": [
              [
                "features",
                {
                  "feature": "!${feature}"
                }
              ]
            ]
          },
          {
            "from": ["widgets"],
            "message":
            "Функция не должна импортировать верхние слои (${dependency.type})",
            "disallow": ["app", "pages"]
          },
          {
            "from": ["widgets"],
            "message": "Виджет не должен импортировать другой виджет",
            "disallow": [
              [
                "widgets",
                {
                  "widget": "!${widget}"
                }
              ]
            ]
          },
          {
            "from": ["pages"],
            "message": "Страница не должна импортировать верхние слои (${dependency.type})",
            "disallow": ["app"]
          },
          {
            "from": ["pages"],
            "message": "Страница не должна импортировать другую страницу",
            "disallow": [
              [
                "pages",
                {
                  "page": "!${page}"
                }
              ]
            ]
          }
        ]
      }
    ]
  },
    "ignorePatterns": ["dist", ".eslintrc.json"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["boundaries"],
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    },
    "boundaries/include": ["src/**/*"],
    "boundaries/elements": [
      {
        "type": "app",
        "pattern": "app"
      },
      {
        "type": "pages",
        "pattern": "pages/*",
        "capture": ["page"]
      },
      {
        "type": "widgets",
        "pattern": "widgets/*",
        "capture": ["widget"]
      },
      {
        "type": "features",
        "pattern": "features/*",
        "capture": ["feature"]
      },
      {
        "type": "entities",
        "pattern": "entities/*",
        "capture": ["entity"]
      },
      {
        "type": "shared",
        "pattern": "shared/*",
        "capture": ["segment"]
      }
    ]
  }
}
